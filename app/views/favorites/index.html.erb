<section class="hero is-info">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        いいねした店舗一覧
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @favorites.each do |favorite|%>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to shop_path(favorite.shop) do %>
                  <%= attachment_image_tag favorite.shop, :image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <figure class="image is-48x48">
                    <%= attachment_image_tag favorite.shop.user, :profile_image, fallback: "no-image.jpg", class: "profile_image" %>
                  </figure>
                </div>
                <div class="media-content">
                  <div class="title"><%= link_to favorite.shop.user.username, user_path(favorite.shop.user) %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
